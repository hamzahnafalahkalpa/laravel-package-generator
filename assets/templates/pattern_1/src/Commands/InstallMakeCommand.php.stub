<?php

namespace {{CLASS_AUTHOR}}\{{CLASS_BASENAME}}\Commands;

class InstallMakeCommand extends EnvironmentCommand
{
    /**
     * The name and signature of the console command.
     *
     * @var string
     */
    protected $signature = '{{SNAKE_CLASS_BASENAME}}:install';


    /**
     * The console command description.
     *
     * @var string
     */
    protected $description = 'This command is used for initial installation of module funding';

    /**
     * Execute the console command.
     */
    public function handle()
    {
        $provider = '{{CLASS_AUTHOR}}\{{CLASS_BASENAME}}\{{CLASS_BASENAME}}ServiceProvider';

        $this->comment('Installing Module {{MODEL_NAME}}...');
        $this->callSilent('vendor:publish', [
            '--provider' => $provider,
            '--tag'      => 'config'
        ]);
        $this->info('✔️  Created config/{{SNAKE_CLASS_BASENAME}}.php');

        $this->callSilent('vendor:publish', [
            '--provider' => $provider,
            '--tag'      => 'migrations'
        ]);
        $this->info('✔️  Created migrations');

        $migrations = $this->setMigrationBasePath(database_path('migrations'))->canMigrate();
        $this->callSilent('migrate', [
            '--path' => $migrations
        ]);
        $this->info('✔️  App table migrated');

        $this->comment('{{LOWER_CLASS_AUTHOR}}/{{SNAKE_CLASS_BASENAME}} installed successfully.');
    }
}
